datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}


model User {
  id        String      @id
  createdAt DateTime @default(now())
  name      String
}


model Friends {
  id        Int   @id @default(autoincrement())
  createdAt DateTime @default(now())
  from      String
  to        String
}

model FriendRequest {
  id        Int   @id @default(autoincrement())
  createdAt DateTime @default(now())
  from      String
  to        String
  status    String
}
